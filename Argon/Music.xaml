<Page
    x:Class="Argon.Music"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="using:Argon.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <DataTemplate x:Key="Media" x:DataType="model:MediaFile">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="1500">
                <Image Source="{x:Bind Thumb.Source}" Height="32" Width="32" HorizontalAlignment="Left"/>
                <TextBlock Width="300" MaxLines="1" TextAlignment="Left" TextWrapping="Wrap" Text="{x:Bind Title}" Margin="10,10,10,10"/>
                <TextBlock Visibility="Collapsed" Text="{x:Bind Name}"/>
                <TextBlock Visibility="Collapsed" Text="{x:Bind Path}"/>
                <Button ToolTipService.ToolTip="Add to" Height="40">
                    <Image Source="/Assets/twotone_add_white_18dp.png" AutomationProperties.Name="Add"/>
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel>
                                <TextBlock Text="Add to:" Margin="0,0,0,12"/>
                                <Button Tag="{x:Bind Name}" Content="New Playlist" Width="150" Margin="0,0,0,10" Click="NewPlaylist_click" />
                                <Button Tag="{x:Bind Name}" Content="Existing Playlist" Width="150" Margin="0,0,0,10" Click="ExistingPlaylist_Click"/>

                            </StackPanel>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid Name="grid">
        <CommandBar DefaultLabelPosition="Right">
            <AppBarButton Icon="Library" x:Name="AddLibraryButton" Label="Add Library" Click="AddLibraryButton_Click"></AppBarButton>
            <AppBarButton Icon="Folder" x:Name="BrowseButton" Label="Browse Music" Click="BrowseButton_Click"></AppBarButton>
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Account" x:Name="About" Label="About"></AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
        <GridView ItemTemplate="{StaticResource Media}" x:Name="SongList" HorizontalAlignment="Left" Margin="15,80,0,100" VerticalAlignment="Top" MaxHeight="793" IsItemClickEnabled="True" ItemClick="SongList_ItemClick">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid HorizontalAlignment="Left" MaximumRowsOrColumns="1" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
        <MediaPlayerElement Height="100" x:Name="mediaElement" HorizontalAlignment="Center" VerticalAlignment="Bottom" AreTransportControlsEnabled="True" Margin="15,0,15,0">
            <MediaPlayerElement.TransportControls>
                <MediaTransportControls IsCompact="False"
                                            IsFastForwardButtonVisible="True"
                                            IsFastForwardEnabled="True"
                                            IsFastRewindButtonVisible="True"
                                            IsFastRewindEnabled="True"
                                            IsPlaybackRateButtonVisible="True"
                                            IsPlaybackRateEnabled="True"/>
            </MediaPlayerElement.TransportControls>
        </MediaPlayerElement>
        <ContentDialog
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Title="Create new playlist"
            x:Name="NewPlayListDialog"
            PrimaryButtonText="Create"
            CloseButtonText="Cancel"
            DefaultButton="Primary">
            <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <TextBlock 
                    Text="Name of Playlist" 
                    TextWrapping="Wrap" />
                <TextBox Name="PlaylistName" />
            </StackPanel>

        </ContentDialog>
        <ContentDialog
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Title="Add to existing playlist"
            x:Name="ExistingPlayListDialog"
            PrimaryButtonText="Add"
            CloseButtonText="Cancel"
            DefaultButton="Primary">
            <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <TextBlock 
                    Text="Name of Playlists" 
                    TextWrapping="Wrap" />
                <GridView x:Name="PlaylistList" HorizontalAlignment="Left" IsItemClickEnabled="True" ItemClick="PlaylistList_ItemClick">
                    <GridView.ItemTemplate>
                        <DataTemplate x:DataType="model:Playlist">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Width="1500">
                                <TextBlock MaxLines="1" Width="300" TextAlignment="Left" TextWrapping="Wrap" Text="{x:Bind Name}" Margin="10,10,10,10"/>
                                <TextBlock Visibility="Collapsed" Text="{x:Bind Path}"/>
                            </StackPanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsWrapGrid HorizontalAlignment="Left" MaximumRowsOrColumns="1" Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>
                </GridView>
            </StackPanel>

        </ContentDialog>
    </Grid>
</Page>
