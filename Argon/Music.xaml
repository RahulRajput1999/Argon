<Page
    x:Class="Argon.Music"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:model="using:Argon.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <DataTemplate x:Key="Media" x:DataType="model:MediaFile">
            <Grid HorizontalAlignment="Left" Width="1500">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="47"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image Source="{x:Bind Thumb.Source}" Height="32" Width="32" HorizontalAlignment="Left"/>
                <TextBlock Grid.Column="1" MaxLines="1" TextAlignment="Left" TextWrapping="Wrap" Text="{x:Bind Title}" Margin="0,0,0,10"/>
                <TextBlock Visibility="Collapsed" Text="{x:Bind Name}"/>
                <TextBlock Visibility="Collapsed" Text="{x:Bind Path}"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid Name="grid">
        <CommandBar DefaultLabelPosition="Right">
            <AppBarButton Icon="Library" x:Name="AddLibraryButton" Label="Add Library" Click="AddLibraryButton_Click"></AppBarButton>
            <AppBarButton Icon="Add" x:Name="NewPlaylist" Label="New Playlist"></AppBarButton>
            <AppBarButton Icon="Folder" x:Name="BrowseButton" Label="Browse Music" Click="BrowseButton_Click"></AppBarButton>
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Account" x:Name="About" Label="About"></AppBarButton>
            </CommandBar.SecondaryCommands>
        </CommandBar>
        <NavigationView x:Name="MusicNavigation" PaneDisplayMode="Top" IsBackButtonVisible="Collapsed" Margin="0,40,0,-40" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" IsSettingsVisible="False" SelectionChanged="MusicNavigation_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="Songs" Content="Songs" Tag="1" Icon="Audio" IsSelected="True"/>
                <NavigationViewItem x:Name="Albums" Content="Albums" Tag="2" Icon="Folder"/>
                <NavigationViewItem x:Name="Artists" Content="Artists" Tag="3" Icon="Contact2"/>
            </NavigationView.MenuItems>
        </NavigationView>
        <GridView ItemTemplate="{StaticResource Media}" x:Name="SongList" HorizontalAlignment="Left" Margin="15,80,0,100" VerticalAlignment="Top" MaxHeight="793" IsItemClickEnabled="True" ItemClick="SongList_ItemClick">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid HorizontalAlignment="Left" MaximumRowsOrColumns="1" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
        <MediaPlayerElement Height="100" x:Name="mediaElement" HorizontalAlignment="Center" VerticalAlignment="Bottom" AreTransportControlsEnabled="True" Margin="15,0,15,0">
            <MediaPlayerElement.TransportControls>
                <MediaTransportControls IsCompact="False"
                                            IsFastForwardButtonVisible="True"
                                            IsFastForwardEnabled="True"
                                            IsFastRewindButtonVisible="True"
                                            IsFastRewindEnabled="True"
                                            IsPlaybackRateButtonVisible="True"
                                            IsPlaybackRateEnabled="True"/>
            </MediaPlayerElement.TransportControls>
        </MediaPlayerElement>
    </Grid>
</Page>
